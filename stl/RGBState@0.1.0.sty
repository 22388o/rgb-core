@mnemonic(jasmine-bogart-compass)
data ContractHistory   : schemaId RGB.SchemaId
                       , contractId RGB.ContractId
                       , global {RGB.GlobalStateType -> ^ ..0xff {GlobalOrd -> ^ ..0xffffffff RGB.DataState}}
                       , rights {RGB.OutputAssignmentVoidState ^ ..0xffffffff}
                       , fungibles {RGB.OutputAssignmentRevealedValue ^ ..0xffffffff}
                       , data {RGB.OutputAssignmentRevealedData ^ ..0xffffffff}
                       , attach {RGB.OutputAssignmentRevealedAttach ^ ..0xffffffff}

@mnemonic(miguel-lava-extend)
data GlobalOrd         : witnessAnchor WitnessAnchor?, idx U16

@mnemonic(fractal-harvard-cola)
